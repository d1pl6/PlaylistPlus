  "name": "playlistplusts",
  "version": "1.0.0",
  "description": "Allows adding songs to playlist via keybind.",
  "author": "d1pl",
  "license": "ISC",
  "keywords": [],
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.d1pl.playlistplus",
    "productName": "Playlist Plus",
    "directories": {
