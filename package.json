{
  "name": "playlistplusts",
  "displayName": "Playlist Plus",
  "version": "1.0.2",
  "description": "Allows adding songs to playlist via keybind.",
  "author": {"name": "d1pl", "email": "no@mail.com"},
  "license": "ISC",
  "keywords": [],
  "type": "commonjs",
  "main": "dist/main.js",
  "build": {
    "appId": "com.d1pl.playlistplus",
    "productName": "Playlist Plus",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": ["portable", "nsis"],
      "icon": "assets/icons/app_icon.ico"
    },
    "linux": {
      "target": ["deb", "rpm", "snap", "AppImage"],
      "icon": "assets/icons/app_icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg", "pkg"],
      "icon": "assets/icons/app_icon.icns",
      "category": "public.app-category.utilities"
    }
  },
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder install-app-deps && electron-builder",

    "dist_win_portable": "npm run build && electron-builder --win --config.extraMetadata.portable=true",
    "dist_win_nsis": "npm run build && electron-builder --win --config.extraMetadata.portable=false",

    "dist_linux_deb": "npm run build && electron-builder --linux --config.linux.target=deb",
    "dist_linux_rpm": "npm run build && electron-builder --linux --config.linux.target=rpm",
    "dist_linux_snap": "npm run build && electron-builder --linux --config.linux.target=snap",
    "dist_linux_appimage": "npm run build && electron-builder --linux --config.linux.target=AppImage",

    "dist_mac_dmg": "npm run build && electron-builder --mac --config.mac.target=dmg",
    "dist_mac_pkg": "npm run build && electron-builder --mac --config.mac.target=pkg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d1pl6/PlaylistPlus.git"
  },
  "bugs": {
    "url": "https://github.com/d1pl6/PlaylistPlus/issues"
  },
  "homepage": "https://github.com/d1pl6/PlaylistPlus#readme",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.4.38",
    "@types/express": "^5.0.3",
    "@types/keytar": "^4.4.0",
    "@types/node": "^24.6.1",
    "@types/node-fetch": "^2.6.13",
    "copyfiles": "^2.4.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "express": "^5.1.0",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "open": "^10.2.0"
  }
}
