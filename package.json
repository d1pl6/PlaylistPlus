      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": ["portable", "nsis"],
      "icon": "assets/icons/app_icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d1pl6/PlaylistPlus.git"
  },
  "bugs": {
    "url": "https://github.com/d1pl6/PlaylistPlus/issues"
  },
  "homepage": "https://github.com/d1pl6/PlaylistPlus#readme",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.4.38",
    "@types/express": "^5.0.3",
    "@types/keytar": "^4.4.0",
    "@types/node": "^24.6.1",
    "@types/node-fetch": "^2.6.13",
    "copyfiles": "^2.4.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
